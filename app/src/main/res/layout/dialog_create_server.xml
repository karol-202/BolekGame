<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent" android:layout_height="match_parent">
	
	<TextView
		android:id="@+id/text_server_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="24dp"
		android:layout_marginTop="10dp"
		android:text="@string/text_server_name"
		android:textAppearance="?android:attr/textAppearanceMedium"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/edit_server_name"
		android:layout_marginLeft="24dp" />
	
	<EditText
		android:id="@+id/edit_server_name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="16dp"
		android:layout_marginStart="24dp"
		android:layout_marginTop="8dp"
		android:ems="10"
		android:inputType="text"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/text_server_name"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_marginRight="16dp"
		android:layout_marginLeft="24dp" />
	
	<TextView
		android:id="@+id/text_nick"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="24dp"
		android:layout_marginTop="10dp"
		android:text="@string/text_nick"
		android:textAppearance="?android:attr/textAppearanceMedium"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/edit_nick"
		android:layout_marginLeft="24dp" />
	
	<EditText
		android:id="@+id/edit_nick"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="16dp"
		android:layout_marginStart="24dp"
		android:layout_marginTop="8dp"
		android:ems="10"
		android:inputType="text"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/text_nick"
		app:layout_constraintTop_toBottomOf="@id/edit_server_name"
		android:layout_marginLeft="24dp"
		android:layout_marginRight="16dp" />

</android.support.constraint.ConstraintLayout>