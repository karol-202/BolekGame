<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="6dp"
	android:layout_marginLeft="8dp"
	android:layout_marginRight="8dp"
	android:layout_marginTop="6dp"
	app:cardCornerRadius="4dp">
	
	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<TextView
			android:id="@+id/text_action_acts_checking_result"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginEnd="8dp"
			android:layout_marginStart="8dp"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginTop="8dp"
			android:text="@string/action_acts_checking_result"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/text_primary"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />
		
		<ImageView
			android:id="@+id/image_action_acts_checking_result_act_1"
			android:layout_width="100dp"
			android:layout_height="0dp"
			android:layout_marginTop="8dp"
			app:layout_constraintDimensionRatio="h,3:4"
			app:layout_constraintEnd_toStartOf="@+id/image_action_acts_checking_result_act_2"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/text_action_acts_checking_result"
			app:srcCompat="@drawable/act_antilustration" />
		
		<TextView
			android:id="@+id/text_action_acts_checking_result_1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			android:layout_marginTop="8dp"
			android:gravity="center_horizontal"
			android:text="@string/act_antilustration"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="@+id/image_action_acts_checking_result_act_1"
			app:layout_constraintStart_toStartOf="@+id/image_action_acts_checking_result_act_1"
			app:layout_constraintTop_toBottomOf="@+id/image_action_acts_checking_result_act_1" />
		
		<ImageView
			android:id="@+id/image_action_acts_checking_result_act_2"
			android:layout_width="100dp"
			android:layout_height="0dp"
			android:layout_marginStart="8dp"
			android:layout_marginTop="8dp"
			app:layout_constraintDimensionRatio="h,3:4"
			app:layout_constraintEnd_toStartOf="@+id/image_action_acts_checking_result_act_3"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toEndOf="@+id/image_action_acts_checking_result_act_1"
			app:layout_constraintTop_toBottomOf="@+id/text_action_acts_checking_result"
			app:srcCompat="@drawable/act_antilustration"
			android:layout_marginLeft="8dp" />
		
		<TextView
			android:id="@+id/text_action_acts_checking_result_2"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			android:layout_marginTop="8dp"
			android:gravity="center_horizontal"
			android:text="@string/act_antilustration"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="@+id/image_action_acts_checking_result_act_2"
			app:layout_constraintStart_toStartOf="@+id/image_action_acts_checking_result_act_2"
			app:layout_constraintTop_toBottomOf="@+id/image_action_acts_checking_result_act_2" />
		
		<ImageView
			android:id="@+id/image_action_acts_checking_result_act_3"
			android:layout_width="100dp"
			android:layout_height="0dp"
			android:layout_marginEnd="8dp"
			android:layout_marginStart="8dp"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginTop="8dp"
			app:layout_constraintDimensionRatio="h,3:4"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toEndOf="@+id/image_action_acts_checking_result_act_2"
			app:layout_constraintTop_toBottomOf="@+id/text_action_acts_checking_result"
			app:srcCompat="@drawable/act_antilustration" />
		
		<TextView
			android:id="@+id/text_action_acts_checking_result_3"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			android:layout_marginTop="8dp"
			android:gravity="center_horizontal"
			android:text="@string/act_antilustration"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="@+id/image_action_acts_checking_result_act_3"
			app:layout_constraintStart_toStartOf="@+id/image_action_acts_checking_result_act_3"
			app:layout_constraintTop_toBottomOf="@+id/image_action_acts_checking_result_act_3" />
	
	</android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>