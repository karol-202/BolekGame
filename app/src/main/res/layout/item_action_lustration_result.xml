<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="6dp"
	android:layout_marginLeft="8dp"
	android:layout_marginRight="8dp"
	android:layout_marginTop="6dp"
	app:cardCornerRadius="4dp">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		
		<TextView
			android:id="@+id/text_action_lustration_result"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="8dp"
			android:layout_marginBottom="8dp"
			android:layout_marginEnd="8dp"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginStart="8dp"
			android:text="@string/action_lustration_result"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/text_primary" />
		
		<pl.karol202.bolekgame.view.AspectImageView
			android:id="@+id/image_action_lustration_result"
			android:layout_width="170dp"
			android:layout_height="0dp"
			android:layout_gravity="center_horizontal"
			android:layout_marginEnd="8dp"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginStart="8dp"
			app:srcCompat="@drawable/role_minister"
			app:aspect="1.2222"
			tools:ignore="ContentDescription" />
		
		<TextView
			android:id="@+id/text_action_lustration_result_result"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginBottom="8dp"
			android:layout_marginTop="8dp"
			android:text="@string/text_lustration_result_bolek" />
	
	</LinearLayout>

</android.support.v7.widget.CardView>