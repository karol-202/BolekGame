<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	
	<TextView
		android:id="@+id/text_vote_on_prime_minister"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:text="@string/action_vote_on_prime_minister"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="@color/text_primary" />
	
	<pl.karol202.bolekgame.utils.VotesBar
		android:id="@+id/votes_bar_vote_on_prime_minister"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:layout_marginEnd="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="16dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="8dp"
		app:votesText="@string/text_votes" />
	
	<android.support.v7.widget.RecyclerView
		android:id="@+id/recycler_vote_on_prime_minister_all_votes"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="8dp"
		android:layout_marginTop="8dp" />
</LinearLayout>
