<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true"
	android:scrollbars="vertical">
	
	<FrameLayout
		android:id="@+id/main_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/background_acts"
			android:orientation="vertical">
			
			<TextView
				android:id="@+id/text_poll_index_text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="8dp"
				android:layout_marginTop="8dp"
				android:gravity="center"
				android:text="@string/text_poll_index"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="@color/text_primary_white" />
			
			<TextView
				android:id="@+id/text_poll_index"
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:layout_gravity="center"
				android:layout_marginBottom="8dp"
				android:background="@drawable/background_poll_index_panel"
				android:gravity="center"
				android:text="@string/zero"
				android:textColor="@color/text_primary"
				android:textSize="24sp" />
			
			<android.support.constraint.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				
				<ImageView
					android:id="@+id/panel_sign_acts_lustration"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="8dp"
					android:layout_marginTop="8dp"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:srcCompat="@drawable/sign"
					tools:ignore="ContentDescription"/>
				
				<TextView
					android:id="@+id/text_acts_lustration"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/text_acts_lustration"
					android:textColor="@color/text_acts"
					android:textSize="20sp"
					android:textStyle="bold"
					app:layout_constraintBottom_toBottomOf="@+id/panel_sign_acts_lustration"
					app:layout_constraintEnd_toEndOf="@+id/panel_sign_acts_lustration"
					app:layout_constraintStart_toStartOf="@+id/panel_sign_acts_lustration"
					app:layout_constraintTop_toTopOf="@+id/panel_sign_acts_lustration" />
			</android.support.constraint.ConstraintLayout>
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:paddingBottom="8dp"
				android:paddingEnd="4dp"
				android:paddingLeft="4dp"
				android:paddingRight="4dp"
				android:paddingStart="4dp"
				android:paddingTop="8dp">
				
				<pl.karol202.bolekgame.utils.AspectImageView
					android:id="@+id/panel_act_slot_lustration_1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginEnd="4dp"
					android:layout_marginLeft="4dp"
					android:layout_marginRight="4dp"
					android:layout_marginStart="4dp"
					android:layout_weight="1"
					android:scaleType="fitXY"
					app:aspect="1.5"
					app:srcCompat="@drawable/panel_act_slot" />
				
				<pl.karol202.bolekgame.utils.AspectImageView
					android:id="@+id/panel_act_slot_lustration_2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginEnd="4dp"
					android:layout_marginLeft="4dp"
					android:layout_marginRight="4dp"
					android:layout_marginStart="4dp"
					android:layout_weight="1"
					android:scaleType="fitXY"
					app:aspect="1.5"
					app:srcCompat="@drawable/panel_act_slot" />
				
				<pl.karol202.bolekgame.utils.AspectImageView
					android:id="@+id/panel_act_slot_lustration_3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginEnd="4dp"
					android:layout_marginLeft="4dp"
					android:layout_marginRight="4dp"
					android:layout_marginStart="4dp"
					android:layout_weight="1"
					android:scaleType="fitXY"
					app:aspect="1.5"
					app:srcCompat="@drawable/panel_act_slot" />
				
				<pl.karol202.bolekgame.utils.AspectImageView
					android:id="@+id/panel_act_slot_lustration_4"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginEnd="4dp"
					android:layout_marginLeft="4dp"
					android:layout_marginRight="4dp"
					android:layout_marginStart="4dp"
					android:layout_weight="1"
					android:scaleType="fitXY"
					app:aspect="1.5"
					app:srcCompat="@drawable/panel_act_slot" />
				
				<pl.karol202.bolekgame.utils.AspectImageView
					android:id="@+id/panel_act_slot_lustration_5"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginEnd="4dp"
					android:layout_marginLeft="4dp"
					android:layout_marginRight="4dp"
					android:layout_marginStart="4dp"
					android:layout_weight="1"
					android:scaleType="fitXY"
					app:aspect="1.5"
					app:srcCompat="@drawable/panel_act_slot" />
			
			</LinearLayout>
			
			<android.support.constraint.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				
				<ImageView
					android:id="@+id/panel_sign_acts_antilustration"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="8dp"
					android:layout_marginTop="8dp"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:srcCompat="@drawable/sign"
					tools:ignore="ContentDescription"/>
				
				<TextView
					android:id="@+id/text_acts_antilustration"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/text_acts_antilustration"
					android:textColor="@color/text_acts"
					android:textSize="20sp"
					android:textStyle="bold"
					app:layout_constraintBottom_toBottomOf="@+id/panel_sign_acts_antilustration"
					app:layout_constraintEnd_toEndOf="@+id/panel_sign_acts_antilustration"
					app:layout_constraintStart_toStartOf="@+id/panel_sign_acts_antilustration"
					app:layout_constraintTop_toTopOf="@+id/panel_sign_acts_antilustration" />
			
			</android.support.constraint.ConstraintLayout>
			
			<TableLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:stretchColumns="0,1,2">
				
				<TableRow
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingBottom="8dp"
					android:paddingTop="8dp">
					
					<android.support.constraint.ConstraintLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginEnd="4dp"
						android:layout_marginLeft="8dp"
						android:layout_marginRight="4dp"
						android:layout_marginStart="8dp">
						
						<ImageView
							android:id="@+id/panel_act_slot_antilustration_1"
							android:layout_width="0dp"
							android:layout_height="0dp"
							android:scaleType="fitXY"
							app:layout_constraintBottom_toBottomOf="parent"
							app:layout_constraintDimensionRatio="2:3"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toTopOf="parent"
							app:srcCompat="@drawable/panel_act_slot"
							android:contentDescription="@string/unknown" />
						
						<ImageView
							android:id="@+id/image_act_slot_antilustration_1_icon"
							android:layout_width="32dp"
							android:layout_height="32dp"
							android:alpha="0.75"
							app:layout_constraintBottom_toBottomOf="parent"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toTopOf="parent"
							app:layout_constraintVertical_bias="0.42"
							app:srcCompat="@drawable/ic_checking_white_24dp"
							tools:ignore="ContentDescription"/>
						
						<TextView
							android:id="@+id/text_act_slot_antilustration_1"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginEnd="8dp"
							android:layout_marginStart="8dp"
							android:layout_marginLeft="8dp"
							android:layout_marginRight="8dp"
							android:layout_marginTop="8dp"
							android:text="@string/act_effect_checking_player"
							android:textColor="@color/text_act_effect"
							android:gravity="center"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/image_act_slot_antilustration_1_icon" />
					</android.support.constraint.ConstraintLayout>
					
					<android.support.constraint.ConstraintLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginEnd="4dp"
						android:layout_marginLeft="4dp"
						android:layout_marginRight="4dp"
						android:layout_marginStart="4dp">
						
						<ImageView
							android:id="@+id/panel_act_slot_antilustration_2"
							android:layout_width="0dp"
							android:layout_height="0dp"
							android:scaleType="fitXY"
							app:layout_constraintBottom_toBottomOf="parent"
							app:layout_constraintDimensionRatio="h,2:3"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toTopOf="parent"
							app:srcCompat="@drawable/panel_act_slot"
							android:contentDescription="@string/unknown"/>
						
						<ImageView
							android:id="@+id/image_act_slot_antilustration_2_icon"
							android:layout_width="32dp"
							android:layout_height="32dp"
							app:layout_constraintBottom_toBottomOf="parent"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toTopOf="parent"
							app:layout_constraintVertical_bias="0.42"
							app:srcCompat="@drawable/ic_checking_white_24dp"
							android:alpha="0.75"
							tools:ignore="ContentDescription"/>
						
						<TextView
							android:id="@+id/text_act_slot_antilustration_2"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginEnd="8dp"
							android:layout_marginStart="8dp"
							android:layout_marginLeft="8dp"
							android:layout_marginRight="8dp"
							android:layout_marginTop="8dp"
							android:gravity="center"
							android:text="@string/act_effect_checking_player_or_acts"
							android:textColor="@color/text_act_effect"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/image_act_slot_antilustration_2_icon" />
					</android.support.constraint.ConstraintLayout>
					
					<android.support.constraint.ConstraintLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginEnd="8dp"
						android:layout_marginLeft="4dp"
						android:layout_marginRight="8dp"
						android:layout_marginStart="4dp">
						
						<ImageView
							android:id="@+id/panel_act_slot_antilustration_3"
							android:layout_width="0dp"
							android:layout_height="0dp"
							android:scaleType="fitXY"
							app:layout_constraintBottom_toBottomOf="parent"
							app:layout_constraintDimensionRatio="h,2:3"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toTopOf="parent"
							app:srcCompat="@drawable/panel_act_slot"
							android:contentDescription="@string/unknown"/>
						
						<ImageView
							android:id="@+id/image_act_slot_antilustration_3_icon"
							android:layout_width="32dp"
							android:layout_height="32dp"
							android:alpha="0.75"
							app:layout_constraintBottom_toBottomOf="parent"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toTopOf="parent"
							app:layout_constraintVertical_bias="0.42"
							app:srcCompat="@drawable/ic_president_choosing_white_24dp"
							tools:ignore="ContentDescription"/>
						
						<TextView
							android:id="@+id/text_act_slot_antilustration_3"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginEnd="8dp"
							android:layout_marginStart="8dp"
							android:layout_marginLeft="8dp"
							android:layout_marginRight="8dp"
							android:layout_marginTop="8dp"
							android:gravity="center"
							android:text="@string/act_effect_new_president"
							android:textColor="@color/text_act_effect"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/image_act_slot_antilustration_3_icon" />
					</android.support.constraint.ConstraintLayout>
				</TableRow>
				
				<TableRow
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingBottom="8dp"
					android:paddingTop="8dp">
					
					<android.support.constraint.ConstraintLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginEnd="4dp"
						android:layout_marginLeft="8dp"
						android:layout_marginRight="4dp"
						android:layout_marginStart="8dp">
						
						<ImageView
							android:id="@+id/panel_act_slot_antilustration_4"
							android:layout_width="0dp"
							android:layout_height="0dp"
							android:scaleType="fitXY"
							app:layout_constraintBottom_toBottomOf="parent"
							app:layout_constraintDimensionRatio="h,2:3"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toTopOf="parent"
							app:srcCompat="@drawable/panel_act_slot"
							android:contentDescription="@string/unknown"/>
						
						<ImageView
							android:id="@+id/image_act_slot_antilustration_4_icon"
							android:layout_width="32dp"
							android:layout_height="32dp"
							android:alpha="0.75"
							app:layout_constraintBottom_toBottomOf="parent"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toTopOf="parent"
							app:layout_constraintVertical_bias="0.42"
							app:srcCompat="@drawable/ic_lustration_white_24dp"
							tools:ignore="ContentDescription"/>
						
						<TextView
							android:id="@+id/text_act_slot_antilustration_4"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginEnd="8dp"
							android:layout_marginStart="8dp"
							android:layout_marginLeft="8dp"
							android:layout_marginRight="8dp"
							android:layout_marginTop="8dp"
							android:gravity="center"
							android:text="@string/act_effect_lustration"
							android:textColor="@color/text_act_effect"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/image_act_slot_antilustration_4_icon" />
					</android.support.constraint.ConstraintLayout>
					
					<android.support.constraint.ConstraintLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginEnd="4dp"
						android:layout_marginLeft="4dp"
						android:layout_marginRight="4dp"
						android:layout_marginStart="4dp">
						
						<ImageView
							android:id="@+id/panel_act_slot_antilustration_5"
							android:layout_width="0dp"
							android:layout_height="0dp"
							android:scaleType="fitXY"
							app:layout_constraintBottom_toBottomOf="parent"
							app:layout_constraintDimensionRatio="h,2:3"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toTopOf="parent"
							app:srcCompat="@drawable/panel_act_slot"
							android:contentDescription="@string/unknown"/>
						
						<ImageView
							android:id="@+id/image_act_slot_antilustration_5_icon"
							android:layout_width="32dp"
							android:layout_height="32dp"
							android:alpha="0.75"
							app:layout_constraintBottom_toBottomOf="parent"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toTopOf="parent"
							app:layout_constraintVertical_bias="0.42"
							app:srcCompat="@drawable/ic_lustration_white_24dp"
							tools:ignore="ContentDescription"/>
						
						<TextView
							android:id="@+id/text_act_slot_antilustration_5"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:layout_marginEnd="8dp"
							android:layout_marginStart="8dp"
							android:layout_marginLeft="8dp"
							android:layout_marginRight="8dp"
							android:layout_marginTop="8dp"
							android:gravity="center"
							android:text="@string/act_effect_lustration"
							android:textColor="@color/text_act_effect"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/image_act_slot_antilustration_5_icon" />
					</android.support.constraint.ConstraintLayout>
					
					<android.support.constraint.ConstraintLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginEnd="8dp"
						android:layout_marginLeft="4dp"
						android:layout_marginRight="8dp"
						android:layout_marginStart="4dp">
						
						<ImageView
							android:id="@+id/panel_act_slot_antilustration_6"
							android:layout_width="0dp"
							android:layout_height="0dp"
							android:scaleType="fitXY"
							app:layout_constraintBottom_toBottomOf="parent"
							app:layout_constraintDimensionRatio="h,2:3"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent"
							app:layout_constraintTop_toTopOf="parent"
							app:srcCompat="@drawable/panel_act_slot"
							android:contentDescription="@string/unknown"/>
					
					</android.support.constraint.ConstraintLayout>
				
				</TableRow>
			</TableLayout>
		</LinearLayout>
		
		<pl.karol202.bolekgame.game.acts.ActsOverlayView
			android:id="@+id/acts_overlay_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />
	
	</FrameLayout>
</ScrollView>
