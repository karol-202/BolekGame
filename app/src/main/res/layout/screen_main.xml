<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent" android:layout_height="match_parent">
	
	<ImageView
		android:id="@+id/background"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:alpha="0.75"
		android:scaleType="centerCrop"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/background_game_main"
		tools:ignore="ContentDescription" />
	
	<android.support.v7.widget.RecyclerView
		android:id="@+id/recycler_actions"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginTop="20dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<FrameLayout
		android:id="@+id/layout_spectator_mode"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:background="@drawable/background_panel_spectator_mode">
		
		<TextView
			android:id="@+id/text_spectator_mode"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="3dp"
			android:gravity="center_horizontal"
			android:text="@string/text_spectator_mode"
			android:textColor="@color/text_primary_white" />
		
	</FrameLayout>

</android.support.constraint.ConstraintLayout>