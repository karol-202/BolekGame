<resources>
	<style name="AppTheme" parent="Theme.AppCompat.Light">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="selectableItemBackground">@drawable/button</item>
		<item name="cardViewStyle">@style/CardView</item> <!-- Workaround for Android Studio bug-->
		<item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
		
		<item name="android:buttonStyle">@style/Button</item>
		<item name="buttonStyle">@style/Button</item>
		
		<item name="android:imageButtonStyle">@style/ImageButton</item>
		<item name="imageButtonStyle">@style/ImageButton</item>
		
		<item name="votesBarStyle">@style/VotesBar</item>
	</style>
	
	<style name="Button" parent="Widget.AppCompat.Button">
		<item name="android:background">@drawable/button</item>
		<item name="fontFamily">sans-serif</item>
	</style>
	
	<style name="ButtonAccent" parent="Button">
		<item name="android:background">@drawable/button_accent</item>
		<item name="android:textColor">@android:color/white</item>
	</style>
	
	<style name="ButtonVoteYes" parent="ButtonAccent">
		<item name="android:background">@drawable/button_vote_yes</item>
	</style>
	
	<style name="ButtonVoteNo" parent="ButtonAccent">
		<item name="android:background">@drawable/button_vote_no</item>
	</style>
	
	<style name="ImageButton" parent="Widget.AppCompat.ImageButton">
		<item name="android:background">@drawable/button</item>
	</style>
	
	<style name="VotesBar">
		<item name="borderSize">1dp</item>
		<item name="borderColor">@color/votes_bar_border</item>
		<item name="votesYesColor">@color/button_vote_yes</item>
		<item name="votesNoColor">@color/button_vote_no</item>
		<item name="votesText">@string/text_votes</item>
		<item name="votesTextColor">@color/text_primary</item>
	</style>
</resources>
